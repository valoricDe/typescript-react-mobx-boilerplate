{
	"compileOnSave": false,
	"compilerOptions": {
        "allowJs": true,
		"module": "es6",
		"target": "es6",
		"jsx": "react",
		"experimentalDecorators": true,
		"strictNullChecks": true,
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true,
		"moduleResolution": "node",
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
		"types": [
			"node",
			"jest",
			"react",
			"react-dom",
            "mobx"
		]
	},
	"exclude": [
		"node_modules",
		"build",
		"misc",
        "vendor",
        "data"
	]
}
