{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "build",
    "misc",
    "vendor",
    "data",
    "__test__"
  ]
}
